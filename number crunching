#include <stdio.h>


void Prime(int temp)
{
    int count=0;
    for(int i=1;i<=temp;i++)
    {
        if(temp%i==0)
        {
            count++;
        }
    }
    
    if(count==2)
    {
        printf("It is a Prime Number \n");
    }
    else
    {
     printf("Not a Prime Number \n");   
    }
}


void factorial(int temp)
{
    int fact=1; 
    for(int i=1;i<=temp;i++)
    {
        fact=fact*i;
    }
    printf("Factorial is: %d \n",fact);
}



int reversed(int temp)
{
    int rev=0;
    int last=0;
    while(temp>0)
    {
    last=temp%10;
    rev=rev*10+last;
    temp=temp/10;
    
    }
    printf("reversed number %d \n",rev);
    return rev;
}



